{
  "version": 2,
  "builds": [
    {
      "src": "templates/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/templates/index.html" },
    { "src": "/game", "dest": "/templates/game.html" },
    { "src": "/static/(.*)", "dest": "/static/$1" }
  ]
}
